<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp">

        <ImageButton
            android:id="@+id/add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_clear_24"
            android:background="#00000000"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="글 쓰기"
            android:textSize="22dp"
            android:layout_marginRight="215dp"/>

        <ImageView
            android:id="@+id/add_apply"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_check_24"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아쎄이 기열!"
                android:textStyle="bold"
                android:selectAllOnFocus="true"
                android:textColor="#938D8D"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/add_post_text"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:text="오도기합!"
                android:textSize="17dp"
                android:textColor="#938D8D"
                android:gravity="top"
                android:background="#00000000"/>

            <Button
                android:id="@+id/add_policy"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:backgroundTint="#EFEFEF"
                android:text="커뮤니티 이용규칙 전체 보기 >"
                android:gravity="center_horizontal"
                android:textSize="8dp"
                android:layout_marginLeft="227dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하루를 이용할때는 바른말 고운말을 사용하며 사생활 노출 및 이용자에게 피해가 가지 않도록 조심합니다 ^0^"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
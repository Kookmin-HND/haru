<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_clear_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="215dp"
            android:gravity="center"
            android:text="글 쓰기"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/add_apply"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_check_24" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="46dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:selectAllOnFocus="true"
                android:hint="제목을 입력해주세요!"
                android:textColor="#938D8D"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_post_text"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#00000000"
                android:gravity="top"
                android:hint="글 내용을 입력해주세요!"
                android:textColor="#938D8D"
                android:textSize="17dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/iv_added_multiple_images_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>
            <Button
                android:id="@+id/add_policy"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="227dp"
                android:backgroundTint="#EFEFEF"
                android:gravity="center_horizontal"
                android:text="커뮤니티 이용규칙 전체 보기 >"
                android:textSize="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="하루를 이용할때는 바른말 고운말을 사용하며 사생활 노출 및 이용자에게 피해가 가지 않도록 조심합니다 ^0^" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_added_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <ImageButton
            android:id="@+id/addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_photo_camera_24" />
    </LinearLayout>

</RelativeLayout>
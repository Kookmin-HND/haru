<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sns_post_writer_photo"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <TextView
                android:id="@+id/sns_post_writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" LMJ님의 하루"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sns_post_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="2022.10.04"
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/sns_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 하루 만들기"
                android:textSize="18sp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/sns_post_preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>